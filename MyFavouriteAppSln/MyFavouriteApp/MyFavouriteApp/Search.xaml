<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFavouriteApp.Search" IconImageSource="search.png" BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#000000" Padding="12" CornerRadius="0">
                <StackLayout Orientation="Horizontal">
                    <Image Source="Manga.png" HeightRequest="50" Aspect="AspectFit" HorizontalOptions="Start"/>

                    <Label Padding="10,0,0,0" Text="Search Engine" HorizontalTextAlignment="Start" TextColor="White" FontSize="16" VerticalOptions="CenterAndExpand"/>

                </StackLayout>
            </Frame>

            <SearchBar Placeholder="Enter Search"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>